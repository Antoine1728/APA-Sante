{% extends 'base.html.twig' %}

{% block title %}Mes adresses - APA Santé
{% endblock %}

{% block content %}
	<a class='btn btn-info btn-sm float-right' href="{{ path('account_address_add') }}">Ajouter une adresse</a>
	<h1>
		Mes adresses
	</h1>
	Gestion adresses
	<a href="{{ path('app_account')}}">Retour</a>
	<hr>
	{% if app.user.addresses|length == 0 %}
		<p class='text-center'>
			Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en ajouter une, veuillez
			<a href="">cliquer içi</a>
		</p>
	{% else %}
		<div class="row">
			<div class="col-md-4">
				{% for address in app.user.addresses %}
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{address.name}}</h5>
							<p class="card-text">
								{{address.address}},
								<br>
								{{address.postal}}
								-
								{{address.city}}
								-
								{{address.country}}
							</p>
							<a href="{{ path('account_address_edit' , {'id' : address.id }) }}" class="">Modifier</a>
							|
							<a href="{{ path('account_address_delete',{'id': address.id}) }}" class="">Supprimer</a>

						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}

{% endblock %}
